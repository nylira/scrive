body.pricing2
  display block

  section
    header
      text-align center
      margin 0 0 3em
      h1
        letter-spacing auto
        font-size 2.4em

table.plans
  width 960px - 32px
  margin 0 1em
  border-top 1px solid blue-border
  th
    background blue-bg
    font 12px/3 sans
    padding 0 .75em
    border-left 1px solid #dee4ed
    border-top 4px solid #bdc9db
    color light

  td
    vertical-align top
    padding 1.5em 1em
    border-top 1px solid blue-border
    &.title
      width 320px - 16px
      padding-top 1em
      h2
        font-weight bold
        color blue-dark
      p
        padding-right 2em

    &.features
      width 320px
      ul
        list-style square
        padding-left 1em
        li
          padding-right 2em
    &.cost
      width 160px
    &.action
      width 160px - 16px
      padding 1.5em 1.5em 3em
      a
        width 100%

    .price
      display block
      color blue-dark
      font-size 1.25em
      font-family source
    .label
      color light

  .tr:hover
    td
      &.title
        border 4px solid blue-dark
        border-right none
      &.features, &.cost
        border-top 4px solid blue-dark
        border-bottom 4px solid blue-dark
      &.action
        border 4px solid blue-dark
        border-left none
