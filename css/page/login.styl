body.login
  width 100%
  height 100%
  clearfix()
  background #f2f2f2 url(../img/bg-texture.png)

  form
    width 400px
    height 400px
    absolute top 50% left 50%
    margin -200px 0 0 -200px

    h1
      margin 0 0 1em
      img
        display block
        width 240px
        margin 0 auto

    ul.fields
      li.field
        margin 0 0 .5em
        &.link
        &.checkbox
          width 400px
          height 2em
        &.link
          a
            display block
            line-height 2em
            padding 0 1em
            color dim
            text-align center
            &:hover
              color anchor

        &.checkbox
          position relative
          transition .15s ease-in-out all
          margin-top 2em
          input
            position absolute
            top .65em
            left 50%
            margin-left -100px
            cursor pointer
          label
            font 1em/2 sans
            width 400px
            padding-left 1em
            position absolute
            text-align center
            top 0
            left 0
            cursor pointer
            color dim

    input[type="text"],
    input[type="password"]
      width 400px
      padding 1.75em 1em
      background #fff
      font 1em sans
      box-shadow none
      margin 0
      border none
      &:focus
        outline none

    input[type="submit"]
      padding 1.1666666em 1em
      font 1.5em/1 source
      border-radius 0
      color #fff
      background blue-dark
      background linear-gradient(top, hsl(215,30,40), hsl(215,30,30))
      border none
      width 400px
      color w75
      cursor pointer
      transition .15s ease-in-out all
      &:hover
        color #fff
        background linear-gradient(top, hsl(215,30,45), hsl(215,30,30))
