body.article

  section.trail
    padding 1em 10px
    h2
      font-size 1.25em
      line-height 1.6em
      a
        color blue-medium
        &:hover
          text-decoration underline
          color anchor

      .rsaquo
        width .75em
        display inline-block
        text-align center
        color blue-medium
    ul.select
      margin-top 2px

  article
    width 640px
    float left

    header
      margin 0 0 1em
      h1
        padding 0

    .body
      border-bottom 1px solid blue-border
      padding-bottom 1.5em

      h2
        margin-bottom .5em

      .img
        width 100%
        height 320px
        font 1em/320px sans
      img, .img
        margin 3em 0

      p, ul, ol, blockquote
        margin-bottom 1.5em

      p, ul, ol
        padding-right 1em

      ul, ol
        padding-left 2em
        li
          margin 0 0 .5em
          p
            margin 0
      ul
        list-style square

      ol
        list-style decimal

    footer
      color light
      line-height 3em
