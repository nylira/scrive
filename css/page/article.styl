body.article

  section.trail
    padding 1em 10px
    h2
      font-size 1.25em
      line-height 1.6em
      a
        color blue-medium
        &:hover
          text-decoration underline
          color anchor

      .rsaquo
        width .75em
        display inline-block
        text-align center
        color blue-medium
    ul.select
      margin-top 2px

  .section-banner
    width 960px
    height 320px
    line-height 320px
    font-size 2em
    margin-top 1.5em
    display none

  .sidebar
    float left
    width 320px
    min-height 100px
    nav
      width 320px
      padding 0 10px
      header
        margin 0 0 .5em
        p
          color light
          margin 0
          &.bold
            color blue-dark
            font-size 1em
          small
            font-size .8333em
      ul
        li
          a

            line-height 2em
            display block
            &:hover
              text-decoration underline

            .icon
              display inline-block
              width 24px
              height 24px
              border-radius 12px
              margin .25em .75em .25em .25em
              background anchor
              font 8px/24px sans
              text-align center
              color w75
              vertical-align middle

  article
    width 640px
    float left

    header
      margin 0 0 1em
      h1
        padding 0

    .body
      border-bottom 1px solid blue-border
      padding-bottom 1.5em

      h2
        margin-bottom .5em

      .img
        width 100%
        height 320px
        font 1em/320px sans

      p, ul, ol, blockquote, img, .img
        margin-bottom 1.5em

      p, ul, ol
        padding-right 1em

      ul, ol
        border-left 4px solid blue-border
        padding-left 3em
        li
          margin 0 0 .5em
          p
            margin 0
      ul
        list-style square

      ol
        list-style decimal

    footer
      color light
      line-height 3em
