body.features

  section.features-grid
    border-bottom none
    padding-bottom 0
    ul
      margin 1em 1em 0 0
      li
        float left
        margin 0 0 1em 1em
        width 296px
        height 240px
        a
          display block
          width 100%
          height 100%
          text-align center
          transition .15s ease-in-out all
          padding 3em 0 0
          border 1px solid blue-border
          .img
            margin 0 auto .75em
            width 4em
            height 4em
            border-radius 2em
            background blue-dark
            font bold 1.5em/4em source
            color w50
            transition .15s ease-in-out background
          .label
            display block
            font 1.5em/1.5 source
            color blue-medium
          &:hover
            .img
              background red

  .features-list
    padding-top 0

  .features
    width 640px
    float left
    clearfix()

    section:last-of-type
      border-bottom none
      padding-bottom 0

    section
      padding 0
      header
        padding 9em 0 3em
        p
          margin 0

    a.feature.media
      display block
      margin-bottom 3em
      width 640px
      &:hover
        .read-more
          text-decoration underline

      .read-more
        color anchor
