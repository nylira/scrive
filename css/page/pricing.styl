body.pricing
  display block

  section
    header
      text-align center
      margin 0 0 3em
      h1
        letter-spacing normal
        font-size 2.4em
        margin-bottom 0

  .plan
    margin 0 0 1.5em
    border 4px solid blue-border
    transition .15s ease-in-out all
    clearfix()
    padding .5em 0
    &:hover
      border-color blue-dark

    div
      width 238px
      padding 16px 32px
      float left
      border-right 1px solid blue-border
      height 180px

      p
        font-family source
        color blue-medium
        margin 0
        line-height 1.25em

      &.title
        border-top none
        h2
          color blue-dark
          font-weight bold

      &.cost
        d block
        font-family source

        .price
          display block
          color blue-dark
          font-size 1.25em

      &.features
        min-height 176px
        font 14px/1.5 sans
        color dim


      &.action
        padding 1em 3.5em
        border-right none
        a
          width 100%
