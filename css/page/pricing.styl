body.pricing
  display block

  section
    header
      text-align center
      margin 0 0 3em
      h1
        letter-spacing auto
        font-size 2.4em

.plan
  width 232px
  margin-right 8px
  border 1px solid blue-border
  float left
  transition .15s ease-in-out all
  padding 0 1em
  &:hover
    border-color blue-dark

  div
    padding 1em 0
    border-top 1px solid blue-border

    &.title
      border-top none
      h2
        font-weight bold
        color blue-dark
      p
        font-family source
        color blue-medium
        margin 0
        line-height 1.25em

    &.features
      min-height 145px
      font .75em/1.4 sans
      color dim
      ul
        li
          padding-right 2em

    &.cost
      d block
      font-family source

      .price
        display block
        color blue-dark
        font-size 1.25em

      .label
        color light

    &.action
      padding 1.5em .5em
      a
        width 100%

    
