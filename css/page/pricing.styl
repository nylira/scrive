body.pricing
  display block

  section.top
    header
      margin-bottom 4em

  .plan-container
    width 288px
    height 457px
    position relative
    float left
    margin 0 0 1.5em 1.5em

    &.integration .plan.active
      left -312px

    &.enterprise .plan .features div.title h2
      line-height 2.25em

    .plan
      border 4px solid blue-border
      width 288px
      height 457px
      position absolute 
      top 0
      left 0
      background #fff
      transition .15s ease-in-out border
      &:hover
        border-color blue-dark

      &.active
        width 912px
        z-index 100
        border-color blue-dark
        form
          display block

      .features
        width 280px
        padding 0 1em
        float left
        div
          padding 32px 24px
          border-bottom 1px solid blue-border
          text-align center

          p
            font-family source
            color blue-medium
            margin 0
            line-height 1.25em

          &.title
            h2
              color blue-dark
              font-weight bold
              font-size 2em
              letter-spacing -1px
              line-height 1.125em
              margin 0 0 .5em

          &.cost
            d block
            font-family source

            .price
              display block
              color blue-dark
              font-size 3em
              color red

          &.action
            padding 2em 3em
            border none
            a
              width 100%
              &.button-gray
                display none

    form
      display none
      float left
      border-left 1px solid blue-border
      width 624px
      padding 0 1em
      margin 1em 0

      header
        margin 0 0 1em
        p
          line-height 2em
          color blue-dark
          background blue-bg
          margin 0
          text-align left
          padding 0 .75em

      ul.fields
        padding 0 1em
        li.field
          clearfix()
          padding .5em 0
          label
            display block
            float left
            width 160px
            color blue-medium
            font 75%/32px sans
          .input
            width 240px
            float left
            input[type=text],
            input[type=email],
            input[type=password],
            input[type=number]
              margin 0
              border 1px solid #ccc
              font 16px/16px sans
              padding 7px 10px
              height 32px
              color txt
              width 100%
              box-sizing border-box
            select
              width 49%
            input::-webkit-outer-spin-button,
            input::-webkit-inner-spin-button
              /* display: none; <- Crashes Chrome on hover */
              -webkit-appearance: none;
              margin: 0; /* <-- Apparently some margin are still there even though it's hidden */

          &.submit
            margin-top 21px
            margin-left 160px
            input
              width 100%

