.article.summary
  padding 4em 0 0
  border-bottom 1px solid blue-border
  clearfix()
  
  .container
    position relative

    .text
      padding-bottom 4em

      h2
        font-size 2.4em
        letter-spacing -1px
        font-weight bold
        line-height 1
        color blue-dark
        margin 0

      .body
        color dim
        margin-top 1em
        font-size 18px
        p
          margin 0

      .read-more
        &:hover
          text-decoration underline

  &.one, &.three
    .text
      float left
      padding-top 80px
      width 320px
    .ipad
      float left

  &.one
    .text
      padding-right 1.5em
    .ipad
      margin-left 40px

  &.two
    .text
      width 720px
      margin 0 auto
      text-align center
    .mbp
      margin-left 140px

  &.three
    .text
      padding-left 1.5em
    .ipad
      margin-right 40px

.load-more.container
  padding 1.5em 0
  a
    width 160px
    display block
    margin 0 400px
    font-size 18px
    padding .75em 0
    text-align center
    &:hover
      text-decoration underline
