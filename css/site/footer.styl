footer.site
  padding 3em 10px
  clearfix()
  nav
    font-size 14px
    ul
      clearfix()
      li
        float left
        padding-right 1em
        a
          text-transform uppercase
          font-weight bold
          &:hover
            text-decoration underline
  ul.etc
    font-size 14px
    margin-bottom 1em
    li
      text-transform uppercase
      color light
  ul.social
    clearfix()
    li
      float left
      margin-right 1em
      a
        display block
        width 2em
        height 2em
        background #ddd
        border-radius 1.5em
