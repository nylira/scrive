header.site
  position fixed
  top 0
  left 0
  width 100%
  z-index 999999
  background #fff
  box-shadow b40 0 0 .4em
  border-top 4px solid m243

  nav
    background linear-gradient(top, m252, m243)
    position relative
    border-top 1px solid #aaa
    height 6em
    ul
      clearfix()
      height 6em
      width 960px
      position relative
      margin 0 auto
      li
        float left
        width 92px
        border-right 1px solid #ddd
        height 3em
        margin-top 1.5em
        a
          display block
          font 1em/6 source
          text-align center
          color dim
          text-shadow #fff 0 1px 0
          height 6*16px + 4px
          margin-top -29px
          border-top 5px solid transparent
          &:hover
            border-top-color red

        &.login
          width 88px
          border-right none

        &#branding
          clearfix()
          width 320px

          #logo
            display block
            float left
            width 320px
            text-align left
            img
              margin 37px 1em

          #tagline
            float left
            margin-top 24px
            line-height 1.6em
            margin-left -20px
            font-weight normal
            display none


body.features #page-features
body.pricing #page-pricing
body.article #page-features
body.about #page-about
body.cases #page-cases
  color blue-dark
  font-weight bold
  border-top-color blue-dark

body.index
  header.site 
    li
      display none
      &#branding
        display block
        width 872px
      &.login
        display block
