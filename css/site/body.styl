*
  box-sizing border-box

.clearfix
  clearfix()

.right
  float right

.left
  float left

.affix
  position fixed
  top 40px !important

html
  background #f2f2f2

body
  d block
  background #fff
  width 1120px
  padding 0 80px
  margin 0 auto

.container
  width 960px
  margin 0 auto
  clearfix()

.content.site
  clearfix()

  section
    padding 3em 0
    border-bottom 1px solid blue-border
    clearfix()

    h1
      font-size 2em
      color blue-dark

    header
      h1
        margin-bottom .5em
      p
        font 1.5em/1.5 source
        color blue-medium
        margin 0 0 1.5em

    &.search
      .right

      form
        ul
          float left
          margin-left 1em
