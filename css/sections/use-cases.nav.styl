.use-cases .panel.nav
  nav
    ul
      clearfix()
      li
        float left
        box-sizing border-box
        w 320px
        a
          display block
          position relative
          transition .15s ease-in-out all
          &:after
            width 60px
            height 60px
            border-radius 30px
            position absolute
            margin -60px 0 0 -30px
            top 50%
            left 50%
            background blue-dark
            content 'Go \203A'
            text-align center
            font 1em/60px Source Sans Pro
            color #fff
            opacity 0.00
            transition .15s ease-in-out opacity
          &:hover
            transform scale(1.1)
            &:after
              opacity 1.00
          .model.ipad
            margin 0 70px
          .model.mbp
            margin 30px -10px 0
          .model.website
            margin 0 70px
          h3
            ta center
            line-height 3em
