section.fixed-nav-list
  padding-top 0

  .articles
    width 640px
    float left
    clearfix()

    section
      padding 0
      header
        padding 7em 0 3em
        p
          margin 0

      &:last-of-type
        border-bottom none
        padding-bottom 0

    a.media, a.video
      display block
      margin-bottom 3em
      width 640px
      &:hover
        .read-more
          text-decoration underline

      .read-more
        color anchor
