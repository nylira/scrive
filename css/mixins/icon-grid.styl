section.icon-grid
  border-bottom none
  padding-bottom 0
  ul
    margin 1em 1em 0 0
    li
      float left
      margin 0 0 1em 1em
      width 295px
      height 240px
      a
        display block
        width 100%
        height 100%
        text-align center
        transition .15s ease-in-out all
        padding 3em 0 0
        border 1px solid blue-border
        .img
          margin 0 auto .75em
          width 4em
          height 4em
          border-radius 2em
          background blue-dark
          font bold 1.5em/4em source
          color w50
          transition .15s ease-in-out background
        .label
          display block
          font 1.5em/1.5 source
          color blue-medium
        &:hover
          .img
            background red
