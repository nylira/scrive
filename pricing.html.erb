    <div class="features">
      <div class="title">
        <h2>Pad <span class="amp">&amp;</span> Touch Signing</h2>
        <p>For sales and administrative teams.</p>
      </div>
      <div class="cost">
        <span class="price">299<span class="unit">kr</span></span>
        <p>per user per month</p>
      </div>
      <div class="action">
        <a class="button button-blue action-sign-up">Sign Up</a>
      </div>
    </div><!--features-->
    <%= render 'partial/form.signup.html.erb'%>
