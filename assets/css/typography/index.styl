body
  font 16px/1.5 Helvetica Neue, Arial, Helvetica, sans-serif

a
  text-decoration none
  color anchor

h1, h2, h3, h4, h5, h6
.h1, .h2, .h3, .h4, .h5, .h6
  font-family Source Sans Pro, sans-serif
  color: blue-dark

h1, .h1
  font-weight normal
  font-size 3em
  letter-spacing -2px

h2, .h2
  font-size 1.5em
  letter-spacing -1px
  color blue-medium

h3, .h3
  font-size 1.25em
  letter-spacing -1px
