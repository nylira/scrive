body
  d block

.container
  width cw*12
  margin 0 auto
  
.use-cases
  background #eef2f5
  padding-top 3em
  padding-bottom 3em
  bb 1px solid #ddd
  h1, h2
    text-align center
  h2
    padding-bottom 1.5em
  nav
    ul
      clearfix()
      li
        float left
        box-sizing border-box
        w 320px
        a
          display block
          position relative
          transition .15s ease-in-out all
          &:after
            width 60px
            height 60px
            border-radius 30px
            position absolute
            margin -60px 0 0 -30px
            top 50%
            left 50%
            background blue-dark
            content 'Go \203A'
            text-align center
            font 1em/60px Source Sans Pro
            color #fff
            opacity 0.00
            transition .15s ease-in-out opacity
          &:hover
            transform scale(1.1)
            &:after
              opacity 1.00

          h3
            ta center
            line-height 3em

.model.ipad
  height 240px
  width 180px
  margin 0 70px
  bg #fff;
  border 1px solid #ccc
  border-radius 5px
  box-sizing border-box
  position relative;
  .screen
    margin 24px
    height 192px
    width 132px
    bg #eee
    border 1px solid #ccc
    border-radius 2px
    box-sizing border-box
  .camera
    position absolute
    top 10px
    left 88px
    width 4px
    height 4px
    border-radius 2px
    bg #999
  .home
    position absolute
    bottom 5px
    left 84px
    width 12px
    height 12px
    border-radius 6px
    box-shadow inset b7 1px 1px 3px
    border 1px solid #ddd
    box-sizing border-box
    .circle
      position absolute
      top 2px
      left 2px
      width 6px
      height 6px
      border-radius 1px
      box-sizing border-box
      border 1px solid #ccc

.model.mbp
  height 210px
  width 330px
  margin 30px -5px 0
  position relative
  .lid
    margin 0 27px 0
    height 185px
    width 276px
    bg #fff
    border 1px solid #ccc
    border-radius 11px
    box-sizing border-box
    border-bottom none
    .screen
      margin 12px
      height 161px
      width 250px
      bg #eee;
      border 1px solid #ccc
      border-radius 2px
      box-sizing border-box
  .base
    margin-top -2px
    width 330px
    height 6px
    background #fff
    border 1px solid #ccc
    border-bottom none
    box-sizing border-box
  .bottom
    width 330px
    height 4px
    background #fff
    border 1px solid #ccc
    border-top none
    border-radius 0 0 12px 12px
    box-sizing border-box

.model.website
  margin 0 70px
  height 240px
  width 180px
  bg #fff;
  border 1px solid #ccc
  border-radius 2px
  box-sizing border-box
  position relative;
  .toolbars
    background linear-gradient(top, #ebebeb, #b9b8b8)
    border-top  1px solid m242
    border-bottom  1px solid m144
    border-radius 2px 2px 0 0
    height 20px
    width 178px
    box-sizing border-box
    position relative
    ul.window-manip
      height 5px
      margin-left 2px
      li
        width 5px
        height 5px
        float left
        margin-right 2px
        border-radius 5px
        box-shadow inset b75 0 0 1px
        &.red
          background linear-gradient(top, #fbcfca, #fa5a55, #e0b2b1)
        &.yellow
          background linear-gradient(top, #fcf6cd, #f8c669, #f4e8b4)
        &.green
          background linear-gradient(top, #eef9dc, #9dd478, #d0dbb6)
    ul.browser-buttons
      clearfix()
      height 12px
      margin-left 2px
      margin-top 2px
      li
        float left
        margin-right 2px
        height 10px
        &.browser-button
          box-shadow inset m100 0 0 2px
          border-radius 2px
          background linear-gradient(top, m245, m195)
          box-sizing border-box
          width 10px
        &.back-forward
          width 20px
          position relative
          &:after 
            content ''
            display block
            position absolute
            top 1px
            left 10px
            height 8px
            width 1px
            background b15
        &.address
          border-radius 1px
          bg #fff
          width 115px
          padding 0 3px
          font 7px/10px Verdana, sans-serif
          color #333
          box-shadow inset b27 1px 1px 1px
  .view
    bg #fff
    border-radius 0 0 2px 2px
    height 218px
    width 178px
